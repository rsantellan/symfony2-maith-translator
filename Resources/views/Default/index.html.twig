<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Administraci√≥n de Textos</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/maithcommonadmin/images/favicon.ico') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommonadmin/css/colour.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommontranslator/css/translations.css') }}" />
            
    <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/jquery-1.10.1.min.js') }}"></script>    
    <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/jquery-migrate-1.2.1.js') }}"></script>
    
    {# Incluiding tinymce #}
    
    <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/tinymce/jquery.tinymce.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/tinymce/tinymce.min.js') }}"></script>
    {# En caso de que no sea ingles incluir el idioma del tiny #}
    {% if app.request.locale != 'en' %}
      <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/tinymce/langs/'~app.request.locale~'.js') }}"></script>
    {% endif %}
    
    {# Incluiding noty #}
    {% trans_default_domain 'MaithCommonTranslatorBundle' %}
    <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/noty/jquery.noty.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/noty/layouts/center.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/noty/themes/default.js') }}"></script>
    
    <script type="text/javascript" src="{{ asset('bundles/maithcommontranslator/js/translatorManager.js') }}"></script>
  </head>
  <body>
    <div class="translator_left_side">
      <div class="translator_actions">
          <a href="{{ path("maith_admin_homepage") }}">Volver al administrador</a>
          <div class="clear"></div>
          <input type="button" value="Aplicar cambios." onclick="return translatorManager.getInstance().doChanges('{{ path('maith_common_translator_clear_cache')}}');" />
        </div>
      <div class="clear"></div>
      <div class="bundles_container">
        <form action="{{ path("maith_common_translator_get_tranlations")}}" method="POST" onsubmit="return translatorManager.getInstance().sendGetTranslations(this);">
              {{ form_errors(form.bundle) }}
              {{ form_widget(form.bundle, {'attr' : {'class' : 'form-control'}}) }}
              <div class="clear"></div>
              {{ form_errors(form.lang) }}
              {{ form_widget(form.lang, {'attr' : {'class' : 'form-control'}}) }}
              {{ form_rest(form) }}
          <input type="submit" value="Buscar" />
        </form>
      </div>
      <div class='bundles_container_error' id='bundles_container_error'>
      </div>
    </div>
    <div class="translator_right_side">
      <div id="bundles_texts_container" class="bundles_texts_container">
    </div>
    </div>
  </body>
</html>
